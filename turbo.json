{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "APP_*",
    "NODE_ENV",
    "VITE_*",
    "BACKEND_*",
    "DATABASE_*",
    "DEV_*",
    "PUBLIC_*",
    "DOCKER_*",
    "CI_*"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "env": ["APP_*", "NODE_ENV", "VITE_*", "BACKEND_*", "DATABASE_*"]
    },
    "build:shared": {
      "outputs": ["dist/**"]
    },
    "build:frontend": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:backend": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["APP_*", "NODE_ENV", "VITE_*", "BACKEND_*", "DATABASE_*", "DEV_*"]
    },
    "dev:shared": {
      "cache": false,
      "persistent": true
    },
    "dev:frontend": {
      "cache": false,
      "persistent": true
    },
    "dev:backend": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
